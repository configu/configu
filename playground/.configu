# $schema: 'https://raw.githubusercontent.com/configu/configu/main/packages/schema/.configu.json'
stores:
  store0:
    # backup: true
    type: PostgreSQL
    configuration:
      host: localhost
  store1:
    # backup: true
    type: sqlite
    configuration:
      # path: ./store.sqlite
      database: ./store.sqlite
  store2:
    type: json-file
    default: true
    configuration:
      path: ./store.json
  hc:
    type: hashi-corp-vault
    configuration:
      address: http://127.0.0.1:8200/
      token: myroot
      engine: secret

