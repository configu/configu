{
  "version": "0.2.0",
  "configurations": [
    // https://tsx.is/vscode
    {
      "name": "tsx",
      "type": "node",
      "request": "launch",
      "program": "${file}",
      "runtimeExecutable": "tsx",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "env": {
        "DEBUG": "1"
      },
      "skipFiles": ["<node_internals>/**", "${workspaceFolder}/node_modules/**"]
    },
    {
      "name": "cli",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/packages/cli/src/configu.ts",
      "runtimeExecutable": "tsx",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**", "${workspaceFolder}/node_modules/**"],
      "cwd": "${workspaceFolder}",
      "env": {},
      "args": [
        "eval",
        "--defaults",
        // "upsert",
        // "--store",
        // "hc",
        "--schema",
        "${workspaceFolder}/packages/schema/data/xy.cfgu.yaml"
        // "--kv",
        // "Z=8"
        // ====================
        // "export",
        // "<",
        // "${workspaceFolder}/stdin"
        // ====================
        // "run",
        // "--script",
        // "script1"
      ]
    }
  ]
}
