$schema: https://files.configu.com/schema/.configu.json

stores:
  json:
    default: false
    backup: true
    type: json-file
    configuration:
      path: ./store.json
  sqlite:
    default: true
    backup: true
    type: sqlite
    configuration:
      database: ./store.sqlite

backup: ./store.sqlite

