{
  "GREETING": {
    "type": "RegEx",
    "pattern": "^(hello|hey|welcome|salute|bonjour)$",
    "default": "hello"
  },
  "SUBJECT": {
    "type": "String",
    "default": "world"
  },
  "MESSAGE": {
    "type": "String",
    "template": "{{GREETING}}, {{SUBJECT}}!",
    "description": "Generates a full greeting message"
  }
}
