{
  "name": "@configu/configu",
  "license": "Apache-2.0",
  "description": "Configu OSS monorepo powered by TypeScript, Node.js and pnpm",
  "author": "@configu/dev",
  "homepage": "https://configu.com",
  "engines": {
    "git": "*",
    "configu": ">=0.17",
    "node": ">=20",
    "pnpm": ">=9"
  },
  "packageManager": "pnpm@9.1.4",
  "scripts": {
    "prepare": "pnpm \"/^prepare:.*/\"",
    "prepare:hooks": "husky",
    "prepare:deps": "syncpack list-mismatches",
    "prepare:build": "pnpm build",
    "prepare:art": "shx cat docs/images/ascii-art.txt",
    "clean": "pnpm -r clean",
    "clean:all": "pnpm clean && shx rm -rf **/node_modules .eslintcache lcov.info",
    "format": "prettier \"**/*.{js,mjs,ts,md,mdx,json,yml}\" --ignore-path .gitignore",
    "format:check": "pnpm format --check",
    "format:fix": "pnpm format --write",
    "lint": "eslint \".\" --ignore-path .gitignore --cache",
    "lint:check": "pnpm lint --quiet",
    "lint:fix": "pnpm lint --fix",
    "build": "tsc --build --verbose tsconfig.build.json",
    "test": "tsx --test \"packages\"",
    "test:cov": "tsx --test --experimental-test-coverage --test-reporter=spec --test-reporter=lcov --test-reporter-destination=stdout --test-reporter-destination=lcov.info \"packages\"",
    "test:watch": "tsx --test --watch \"packages\"",
    "start": "shx echo \"Interactive start script is coming soon <3\""
  },
  "devDependencies": {
    "@cspell/eslint-plugin": "^8.8.1",
    "@types/lodash": "^4.17.4",
    "@types/node": "20.12.12",
    "@typescript-eslint/eslint-plugin": "^7.9.0",
    "@typescript-eslint/parser": "^7.9.0",
    "esbuild": "^0.21.3",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "shx": "^0.3.4",
    "syncpack": "^12.3.2",
    "ts-node": "^10.9.2",
    "tslib": "^2.6.2",
    "tsx": "^4.10.5",
    "typescript": "^5.4.5",
    "zx": "8.1.0"
  }
}
